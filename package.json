{
  "name": "vscodethemes",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Jordan Schroter <hello@jschr.io>",
  "license": "MIT",
  "scripts": {
    "invoke:fetchThemes":
      "ts-node scripts/invoke --job ../backend/jobs/fetchThemes.ts",
    "build": "rimraf build && tsc",
    "install-build-deps":
      "cp package.json build/package.json && cp yarn.lock build/yarn.lock && cd build && yarn install --production  --frozen-lockfile",
    "package":
      "yarn install-build-deps && bestzip build/lambda.zip build/backend build/types build/node_modules",
    "plan":
      "cd infrastructure/env-production && terraform init -input=false && terraform get && terraform plan -input=false -out=terraform.plan",
    "deploy":
      "cd infrastructure/env-production && terraform apply -auto-approve terraform.plan",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "tslint --project ."
  },
  "dependencies": {
    "node-fetch": "^1.7.3",
    "runtypes": "^0.13.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^0.0.24",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^21.1.8",
    "@types/minimist": "^1.2.0",
    "@types/node": "^8.0.54",
    "@types/node-fetch": "^1.6.7",
    "aws-sdk": "^2.175.0",
    "bestzip": "^1.1.4",
    "jest": "^21.2.1",
    "jest-fetch-mock": "^1.3.3",
    "minimist": "^1.2.0",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.2.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "mapCoverage": true,
    "collectCoverageFrom": ["backend/**", "frontend/**"],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  }
}
