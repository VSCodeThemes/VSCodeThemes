{
  "presets": ["latest"],
  "plugins": ["transform-runtime"],
  "env": {
    "production": {
      "plugins": [
        [
          "emotion",
          {
            "hoist": true
          }
        ]
      ]
    },
    "development": {
      "plugins": [
        [
          "emotion",
          {
            "sourceMap": true,
            "autoLabel": true
          }
        ]
      ]
    },
    "test": {
      "plugins": [
        [
          "emotion",
          {
            "inline": true
          }
        ]
      ]
    }
  }
}
